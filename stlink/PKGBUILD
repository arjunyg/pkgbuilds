# $Id$
# Maintainer: Anatol Pomozov <anatol.pomozov@gmail.com>

pkgname=stlink
pkgver=1.3.1
pkgrel=1
pkgdesc='Firmware programmer for STM32 STLINK v1/v2 protocol'
arch=(i686 x86_64)
url='https://github.com/texane/stlink'
license=(BSD)
# Add support for gtk3-based GUI
depends=(mingw-w64-x86_64-libusb)
makedepends=(mingw-w64-x86_64-cmake)
source=($pkgname-$pkgver.zip::https://github.com/texane/stlink/archive/$pkgver.zip)
sha256sums=('9cdfbb24ca7665f3b7cdb39750ea51d0bd2ef5bdbc9d641011c4bd3b77980b70')

build() {
  cd stlink-$pkgver
  MSYS2_ARG_CONV_EXCL="-DCMAKE_INSTALL_PREFIX=" \
  ${MINGW_PREFIX}/bin/cmake.exe \
        -G "MSYS Makefiles" \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=${MINGW_PREFIX} \
        -DSTLINK_UDEV_RULES_DIR=/usr/lib/udev/rules.d \
        -DSTLINK_MODPROBED_DIR=/usr/lib/modprobe.d
  make
}

package() {
  cd stlink-$pkgver

  make DESTDIR="$pkgdir" install

  install -Dm644 LICENSE "$pkgdir"${MINGW_PREFIX}/share/licenses/$pkgname/LICENSE
  rm "$pkgdir"${MINGW_PREFIX}/lib/libstlink.a
}
